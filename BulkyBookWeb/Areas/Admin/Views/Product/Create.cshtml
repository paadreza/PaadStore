@model Bulky.Models.Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary fw-light mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product</h2>
            </div>
        </div>
    </div>

    <div class="card-body ">
        <form method="post" class="row">
            <div class="border p-3">
              @*   <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" class="form-control border-0 shadow"/>
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-bg-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-bg-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to List </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    <partial Title="_ValidationScriptsPartial" />

}
